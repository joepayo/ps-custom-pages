---
layout: layouts/base
---

{% import "macros/image.njk" as imageMacro %}

<main id="main" class="mx-auto mt-12 font-body lg:px-0">
  <div class="container px-4 mx-auto">
    <section class="flex flex-wrap items-end">
      <div class="lg:pr-64 fade-in-right animated">
        <h5 class="font-light uppercase text-11875">{{ title }}</h5>
        <h1 class="text-5xl font-semibold leading-11 md:text-7xl">{{ intro_pre_title }}</h1>
        <p class="text-2xl leading-tight">{{ intro_pre_text | safe }}</p>
      </div>
      <div class="lg:w-3/5 lg:pr-12 fade-in-right animated">
        <h3 class="mt-6 text-3xl font-semibold leading-11 md:text-5xl">{{ intro_title }}</h3>
        <img src="{{ site.url }}/{{ intro_image }}" class="p-8 md:float-right lg:float-none lg:hidden md:w-2/5 fade-in-left animated">
        <p class="text-2xl leading-tight">{{ intro_text | safe }}</p>
        {% for intro_link in intro_cta %}
        <p class="mt-4"><a href="{{ intro_link.link }}" class="text-2xl font-bold underline">{{ intro_link.label }}</a></p>
        {% endfor %}
      </div>
      <img src="{{ site.url }}/{{ intro_image }}" class="hidden lg:block md:w-2/5 fade-in-left animated">
    </section>
  </div>

  <!-- Boxes -->
  <div class="container mx-auto">
    {%- for box in collections.boxes -%}
      <section class="flex flex-wrap justify-between px-6 pt-6 pb-10 my-2 border-8 md:my-16 md:px-6 md:py-10 lg:px-10 lg:py-16 border-dodger-blue">
        <img src="{{ site.url }}/{{ box.data.image }}" class="pb-8 slide-in-right animated md:hidden">
        <h3 class="mb-4 font-semibold text-25r leading-11 md:text-6xl md:w-1/2 md:pr-8 lg:pr-0 slide-in-right animated">{{ box.data.title }}</h3>
        <p class="self-end mb-6 text-2xl leading-tight md:w-1/2 lg:w-2/5 fade-in-left animated">{{ box.data.text | safe }}</p>
        <div class="self-end hidden md:block md:w-1/2 slide-in-right animated">
          <img src="{{ site.url }}/{{ box.data.image }}">
        </div>
        <div class="mb-8 md:w-1/2 lg:w-2/5 fade-in-left animated more">
          {% if box.data.cta_link|length %}
            <a href="{{ box.data.cta_link }}" class="button" target="_blank" rel="noreferrer noopener">{{ box.data.cta_label }}</a>
          {% endif %}
          {% if box.templateContent|length %}
          <div class="invisible h-0 pb-4 opacity-0 text-11875 markdown max-h-0">
            {{ box.templateContent | safe }}
          </div>
          {% endif %}
          {% if box.data.toggle_label|length %}
            <a class="relative z-10 button shadow-button toggle">{{ box.data.toggle_label }} <i class="inline-block w-1 h-1 p-1 mb-1 ml-1 text-xs border-black arrow arrow-down"></i></a>
            <a class="relative z-10 hidden button shadow-button toggle">Collapse <i class="inline-block w-1 h-1 p-1 ml-1 -mb-1 text-xs border-black arrow arrow-up"></i></a>
          {% endif %}
        </div>

      </section>
    {%- endfor -%}
  </div>

  <!-- Sit tight -->
  <section class="max-w-3xl px-4 mx-auto my-24 text-center animated slide-in-up">
    <h4 class="mb-6 font-semibold text-25r leading-11 md:text-5xl">{{ sit_tight_title }}</h4>
    <p class="mb-6 text-2xl">{{ sit_tight_text }}</p>
    <img src="{{ site.url }}/{{ sit_tight_image }}" class="mx-auto">
  </section>

  <!-- Social Share CTA -->
  <div class="px-4 py-20 text-center text-white bg-dodger-blue animated fade-in-up">
    <div class="max-w-3xl pb-4 mx-auto">
      <h2 class="pb-4 text-5xl font-semibold leading-none md:text-45">{{ cta_title }}</h2>
      <p class="max-w-xl mx-auto text-2xl">{{ cta_text }}</p>
    </div>
    <div class="flex items-center justify-between max-w-xs mx-auto my-6 text-center">
      {% for social_link in social_links %}
        <a href="{{ social_link.link }}" title="{{ social_link.label }}" target="_blank" rel="noreferrer noopener" class="social">{{ social_link.label }}</a>
      {% endfor %}
    </div>    
  </div>

  <!-- FAQs -->
  <div class="container mx-auto my-24">
    <div class="px-4 my-12 md:px-0">
      <h4 class="font-semibold text-25r leading-11 md:text-5xl" id="faq">{{ faq_title }}</h4>
      <p class="text-2xl leading-none">{{ faq_text }}</p>
    </div>
    {% for faq in collections.faqs %}
      <div id="{{ faq.data.id }}" class="my-2 border-8 md:my-6 faq border-dodger-blue">
        <div class="flex items-center justify-between p-6 cursor-pointer question md:p-8">
          <h4 class="pr-6 text-3xl font-semibold md:text-2rem leading-11">{{ faq.data.question | safe }}</h4>
          <i class="arrow arrow-down"></i>
        </div>
        <div class="invisible h-0 text-2xl opacity-0 answer markdown max-h-0">{{ faq.templateContent | safe }}</div>
      </div>
    {% endfor %}
  </div>

  <!-- Resources -->
  <div id="resources" class="flex flex-wrap items-baseline justify-between max-w-4xl px-4 mx-auto md:mb-24">
    {%- for resource in collections.resources -%}
      <div class="max-w-xs mx-auto mb-24 md:max-w-none md:mb-0 md:w-2/5 text-11875 markdown">
      <img src="{{ site.url }}/{{ resource.data.audience_image }}" class="mx-auto mb-6">
        <h4 class="font-semibold leading-snug text-2rem">{{ resource.data.audience_title }}</h4>
        <p>{{ resource.templateContent | safe }}</p>
      </div>
    {%- endfor -%}
  </div>

  <!-- About this page -->
  <section class="max-w-3xl px-4 mx-auto mb-24 text-center md:my-24 animated slide-in-up">
    <h4 class="mb-6 font-semibold text-25r leading-11 md:text-5xl">{{ about_title }}</h4>
    <p class="mb-6 text-2xl">{{ about_text | safe }}</p>
  </section>

  <section class="max-w-3xl px-4 mx-auto mb-24 text-center md:my-24 animated slide-in-up">
    <h4 class="mb-12 font-semibold text-25r leading-11 md:text-5xl">{{ partners_title }}</h4>
    <div class="flex flex-wrap items-end justify-center -m-5 sm:-m-10">
      {% for partner in partners %}
        <img src="{{ site.url }}/{{ partner.image }}" alt="{{ partner.alt }}" class="p-5 sm:p-10">
      {% endfor %}
    </div>
  </section>

</main>