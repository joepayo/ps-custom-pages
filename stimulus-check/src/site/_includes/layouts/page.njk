---
layout: layouts/base
---

{% import "macros/image.njk" as imageMacro %}

<main id="main" class="mx-auto mt-12 font-body lg:px-0">
  <div class="container px-4 mx-auto">
    <section class="flex flex-wrap items-end">
      <div class="lg:w-3/5 lg:pr-12 fade-in-right animated">
        <h5>{{ title }}</h5>
        <h1>{{ intro_title }}</h1>
        <img src="{{ intro_image }}" class="py-8 md:float-right lg:float-none lg:hidden md:w-2/5 fade-in-left animated">
        <p class="text-2xl leading-tight">{{ intro_text }}</p>
        <p class="mt-4"><a href="{{ intro_cta_link }}" class="text-2xl font-bold underline">{{ intro_cta_label }}</a></p>
      </div>
      <img src="{{ intro_image }}" class="hidden lg:block md:w-2/5 fade-in-left animated">
    </section>
  </div>

  <!-- Boxes -->
  <div class="container mx-auto">
    {%- for box in collections.boxes -%}
      <section class="flex flex-wrap justify-between px-6 pt-6 pb-10 my-16 border-8 md:px-6 md:py-10 lg:px-10 lg:py-16 border-dodger-blue">
        <img src="{{ box.data.image }}" class="pb-8 slide-in-right animated md:hidden">
        <h3 class="mb-4 md:w-1/2 md:pr-8 lg:pr-0 slide-in-right animated">{{ box.data.title }}</h3>
        <p class="self-end mb-6 text-2xl leading-tight md:w-1/2 lg:w-2/5 fade-in-left animated">{{ box.data.text | safe }}</p>
        <div class="self-end hidden md:block md:w-1/2 slide-in-right animated">
          <img src="{{ box.data.image }}">
        </div>
        <div class="mb-8 md:w-1/2 lg:w-2/5 fade-in-left animated more">
          {% if box.data.cta_link|length %}
            <a href="{{ box.data.cta_link }}" class="button" target="_blank">{{ box.data.cta_label }}</a>
          {% endif %}
          {% if box.templateContent|length %}
          <div class="invisible h-0 pb-4 opacity-0 markdown max-h-0">
            {{ box.templateContent | safe }}
          </div>
          {% endif %}
          {% if box.data.toggle_label|length %}
            <a class="relative z-10 button shadow-button toggle">{{ box.data.toggle_label }} <i class="inline-block w-1 h-1 p-1 mb-1 ml-1 text-xs border-black arrow arrow-down"></i></a>
            <a class="relative z-10 hidden button shadow-button toggle">Collapse <i class="inline-block w-1 h-1 p-1 ml-1 -mb-1 text-xs border-black arrow arrow-up"></i></a>
          {% endif %}
        </div>

      </section>
    {%- endfor -%}
  </div>

  <!-- Sit tight -->
  <section class="max-w-3xl px-4 mx-auto my-24 text-center animated slide-in-up">
    <h4 class="mb-6">{{ sit_tight_title }}</h4>
    <p class="mb-6 text-2xl">{{ sit_tight_text }}</p>
    <img src="{{ sit_tight_image }}" class="mx-auto">
  </section>

  <!-- Social Share CTA -->
  <div class="px-4 py-20 text-center text-white bg-dodger-blue animated fade-in-up">
    <div class="max-w-3xl pb-4 mx-auto">
      <h2 class="pb-4 leading-none">{{ cta_title }}</h2>
      <p class="max-w-xl mx-auto text-2xl">{{ cta_text }}</p>
    </div>
    <div class="flex items-center justify-between max-w-xs mx-auto my-6 text-center">
      {% for social_link in social_links %}
        <a href="{{ social_link.link }}" title="{{ social_link.label }}" class="social">{{ social_link.label }}</a>
      {% endfor %}
    </div>    
  </div>

  <!-- FAQs -->
  <div class="container mx-auto my-24">
    <div class="px-4 my-12 md:px-0">
      <h4>{{ faq_title }}</h4>
      <p class="text-2xl leading-none">{{ faq_text }}</p>
    </div>
    {% for faq in faqs %}
      <div id="{{ faq.id }}" class="my-6 border-8 faq border-dodger-blue">
        <div class="flex items-center justify-between p-6 cursor-pointer md:p-8">
        <h4 class="pr-6 title">{{ faq.question }}</h4>
        <i class="arrow arrow-down"></i>
        </div>
        <p class="h-0 text-2xl opacity-0 answer max-h-0">{{ faq.answer | safe }}</p>
      </div>
    {% endfor %}
  </div>

  <!-- Resources -->
  <div class="flex flex-wrap items-baseline justify-between max-w-4xl px-4 mx-auto md:mb-24">
    {%- for resource in collections.resources -%}
      <div class="mx-auto mb-24 md:mb-0 md:w-2/5 markdown">
      <img src="{{ resource.data.audience_image }}" class="mx-auto mb-6">
        <h4 class="leading-snug title">{{ resource.data.audience_title }}</h4>
        <p>{{ resource.templateContent | safe }}</p>
      </div>
    {%- endfor -%}
  </div>

  <!-- About this page -->
  <section class="max-w-3xl px-4 mx-auto my-24 text-center animated slide-in-up">
    <h4 class="mb-6">{{ about_title }}</h4>
    <p class="mb-6 text-2xl">{{ about_text }}</p>
  </section>

</main>